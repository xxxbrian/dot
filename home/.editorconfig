root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
# insert_final_newline = true
curly_bracket_next_line = false
spaces_around_operators = true

[*.{cjs,js,jsx,ts,tsx,vue}]
quote_type = double
indent_size = 2

[*.{html,less,css,json}]
quote_type = double

[*.{json,yml,yaml}]
indent_size = 2

[package.json]
indent_size = 2

[*.lua]
indent_size = 2
